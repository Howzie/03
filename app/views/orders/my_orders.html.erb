<div class="container">
	<div class="row">
	    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<h3 class="star-heading">
				My Orders
			</h3>
	    </div>
    </div>
	<div class="row">
		<div class="col-lg-12">
			<div class="user-orders">
				<% if @my_orders.blank? %>
					<p class="no-slug">You have no orders.</p>
				<% else %>
					<div class="table-responsive">
			            <table class="table table-striped">
			                <thead>
			                    <tr>
			                    	<th>User name</th>
			                        <th>Item Code</th>
			                        <th>Item Name</th>
			                        <th>Item Specification</th>
			                        <th>Item Price</th>
			                        <th>Qty</th>
			                        <th>Item Delivery Date</th>
			                        <th>Item address</th>
			                        <th>Status</th>
			                    </tr>
			                </thead>

			                <tbody>
		                        <% @my_orders.each do |s| %>
		                            <tr id="element">
		                            	<td><%= s.user.name %></td>
		                                <td><%= s.item.code %></td>
		                                <td><%= s.item.name %></td>
		                                <td><%= s.item.specification %></td>
		                                <td><%= s.item.price %></td>
		                                <td><%= s.item_qty %></td>
		                                <td><%= s.delivery_date %></td>
		                                <td><%= s.delivery_add %></td>
		                                <% if s.is_delivered == true %>
		                                	<td>
			                                	<P class="panding-status">Delivered</P>
			                                	<%= link_to "View", order_path(s.id), class: "view-order" %>
			                                </td>
			                            <% else %>
			                                <td>
			                                	<P class="panding-status">Pending</P>
			                                	<%= link_to "View", order_path(s.id), class: "view-order" %>
			                                </td>
		                                <% end %>
		                            </tr>
			                    <% end %>
			                </tbody>
			            </table>
			        </div>
				<% end %>
			</div>
		</div>
	</div>
</div>
<style type="text/css">
	a.btn.btn-primary.new-order{
		display: none;
	}
</style>