<div class="container">
	<div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <h3 class="star-heading">
            Review Order
          </h3>
        </div>
    </div>
	<div class="row">
		<div class="col-lg-12">
			<div class="merch-item">
				<div class="table-responsive">
				<!-- <input type="checkbox" name="vehicle" value="Bike" class="Confirm-order"> 	Confirm order &nbsp;&nbsp;&nbsp;&nbsp; -->
		            <table class="table table-hover">
		                <thead>
		                    <tr>
		                        <th>Item Code</th>
		                        <th>Item Name</th>
		                        <th>Item Specification</th>
		                        <th>Item Price</th>
		                        <th>Item Qty</th>
		                        <th>Item Delivery Date</th>
		                        <th>Sub Total</th>
		                    </tr>
		                </thead>

		                <tbody>
		                	<% i = 0 %>
		                    <% @items.each do |h| %>
	                            <tr>
	                                <td><%= h.code %></td>
	                                <td><%= h.name %></td>
	                                <td><%= h.specification %></td>
	                                <td>INR <%= h.price %></td>
	                                <td><%= @c[i] %></td>
	                                <td><%= @start_date + h.delivery_days %></td>
	                                <td>INR <%= @c[i].to_i * h.price %></td>
	                            </tr>
	                          	<% i += 1 %>
		                    <% end %>
		                </tbody>
		            </table>
		        </div>
			</div>
			<div class="modify-sec">
				<div class="modify-order">
					<%= link_to "Modify", modify_order_orders_path(type: 'm'), class:"btn btn-primary pull-left"%>
				</div>
				<div class="pay-btn pull-right">
					<%= form_tag make_order_path, :id => 'form' do %>
						<%= submit_tag "Comfirm", class: "btn btn-primary submit-order" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
<style type="text/css">
    a#u-order{
        display: none;
    }

    a.btn.btn-primary.new-order.pull-right {
        display: none;
    }
</style>

